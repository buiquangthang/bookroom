<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <div class="field">
    <%= f.label :time %>
    <%= f.time_field :time %>
  </div>

  <div class="field">
    <%= f.label :period %>
    <%= f.number_field :period %>
  </div>

  <div class="field">
    <%= f.label :room_id %>
    <%= f.select :room_id, options_for_select(@rooms.collect{ |u| [u.name, u.id] }, event.room_id) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
