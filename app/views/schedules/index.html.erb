<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Description</th>
      <th>Period start</th>
      <th>Period end</th>
      <th>Day of week</th>
      <th>Week start</th>
      <th>Week end</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.subject %></td>
        <td><%= schedule.description %></td>
        <td><%= schedule.period_start %></td>
        <td><%= schedule.period_end %></td>
        <td><%= schedule.day_of_week %></td>
        <td><%= schedule.week_start %></td>
        <td><%= schedule.week_end %></td>
        <td><%= schedule.year %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

