= simple_form_for @schedule do |f|
  .form-group
    = f.input :subject
  .form-group
    = f.input :description
  .form-group.col-md-6
    = f.input :period_start, collection: 1..9, selected: 1, :input_html => {:onchange => "change_period()"}
  .form-group.col-md-6
    = f.input :period_end, collection: 2..10, selected: 2
  .form-group
    = f.input :day_of_week, collection: Date::DAYS_INTO_WEEK
  .form-group
    .col-md-6
      = f.input :week_start
    .col-md-6
      = f.input :week_end
  .form-group
    = f.input :year, collection: [Time.now.year,Time.now.year+1], selected: Time.now.year
  .form-group
    = f.input :room_id, collection: @rooms, label_method: :name, value_method: :id,label: "Location", include_blank: false, selected: @schedule.room_id
  .form-group
    = f.input :course_id, collection: @courses, label_method: :name, value_method: :id,label: "Class", include_blank: false, selected: @schedule.course_id

  = f.button :submit, class: "btn btn-info"

